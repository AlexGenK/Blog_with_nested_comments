<%= form_for [parent, comment] do |f| %>
	<% if comment.errors.any? %>
		<h3><%= pluralize(comment.errors.count, "error") %></h3>
		<ul>
			<% comment.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div>
		<%= f.text_area :body %>
	</div>
	<br>
	<div>
		<%= f.submit %>
	</div>
<% end %>
<%= form_for [parent, comment] do |f| %>
	<% if comment.errors.any? %>
		<h3><%= pluralize(comment.errors.count, "error") %></h3>
		<ul>
			<% comment.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div class='row'>
		<%= f.text_area :body, class: 'col-sm-12' %>
	</div>
	<br>
	<div class='row'>
		<%= f.submit class: 'btn btn-default' %>
	</div>
<% end %>
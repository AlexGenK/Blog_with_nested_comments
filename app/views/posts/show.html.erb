<%= render(partial: "post", object: @post, locals: { truncate_size: nil}) %>
<div class='row'>
	<%= link_to ">>> Edit", edit_post_path, class: 'btn btn-default' %>
	<%= link_to "Delete <<<", post_path, method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-danger' %>
</div>
<hr class='row'>
<h4 class='row'>Comments:</h4>
<ul class="comment_list">
	<%= render(partial: 'comments/comment', collection: @post.comments) %>
</ul>
<hr class='row'>
<h4 class='row'>Add a comment:</h4>
<%= render(partial: 'comments/form', locals: { parent: @post, comment: @post.comments.build }) %>
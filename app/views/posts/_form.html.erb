<%= form_for post do |f| %>

	<p>
		<%= f.label :kind %><br>
		<%= f.radio_button :kind, 'article', onClick: "javascript:kindCheck();" %>
		<%= f.label :kind_article, 'Article' %>
		<%= f.radio_button :kind, 'event', onClick: "javascript:kindCheck();" %>
		<%= f.label :kind_event, 'Event' %>

		<%= f.date_field :date %>	

	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>

<script type="text/javascript">window.onload = kindCheck();</script>
